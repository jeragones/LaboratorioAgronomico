extends index
block containerBody

	div(class="container-fluid")
		div(class="row")
			div(class="col-md-4 breadcrumb")
				div(id="newSide" class="container-fluid")
					each resp, i in data 
						div(class="row jumbotron newsItemReview" value="#{resp.id_noticia}" onclick="addnewsTobody(#{resp.id_noticia})")
							div(class="form-inline" role="form")
								div(class="NewsitemTitle")
									h5 #{resp.encabezado}
								div(class="form-group pull-right NewsitemDate")
									h5 #{resp.fecha_creacion.toLocaleDateString("en-GB")}
							div(class="row Newsitemdecrip")
								h5 #{resp.descripcion}
			div(class="col-md-8")
				div(class="panel panel-default")
					div(id="newSideBody" class="panel-body")
						block containerNotice
